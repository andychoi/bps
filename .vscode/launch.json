{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "mgmtArgs",
      "type": "promptString",
      "description": "manage.py command + its flags (e.g. test_agent --username alice --message \"hi\")"
    },
    {
      "id": "scriptWithArgs",
      "type": "promptString",
      "description": "Enter script path and arguments (e.g. apps/foo.py --foo bar)"
    }
  ],
  "configurations": [
    {
      "name": "Linux: Django Runserver",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "console": "integratedTerminal",
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Linux: ASGI with Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "psmprj.asgi:application",
        "--host", "127.0.0.1",
        "--port", "8000"
      ],
      "env": {
        // "DJANGO_SETTINGS_MODULE": "psmprj.settings.settings"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Django Management Command (prompt)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/dj.py",
      "args": ["${input:mgmtArgs}"],
      "console": "integratedTerminal",
      "django": true
    },
    {
      "name": "Run Any Python Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_script.py",
      "args": ["${input:scriptWithArgs}"],
      "console": "integratedTerminal"
    },
    {
      "name": "Windows: Django Runserver",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "console": "integratedTerminal",
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Windows: Django Shell",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["shell"],
      "console": "integratedTerminal",
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Windows: Collect Static",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["collectstatic", "--no-input"],
      "console": "integratedTerminal",
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Profile Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "8000"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "subProcess": true,
      "purpose": ["profile"]
    }
  ]
}